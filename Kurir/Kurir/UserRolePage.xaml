<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kurir.UserRolePage"
             Title="Eko Kurir App">
    <ContentPage.Content>
        <Frame x:Name="frm1" BorderColor="GreenYellow" HorizontalOptions="Center" VerticalOptions="Center" Padding="10" Margin="15">
            <StackLayout>
            <Label Text="Chose your role to continue."
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
                <ListView x:Name="RoleList" VerticalOptions="Center" HorizontalOptions="Center" ItemSelected="MenuItem_ClickedAsync" BackgroundColor="#41A85F">
                <ListView.ItemTemplate>
                    
                    <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <Label FontSize="Medium" HorizontalTextAlignment="Center" Text="{Binding Name}" TextColor="Black" ></Label>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    
                </ListView.ItemTemplate>
            </ListView>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>