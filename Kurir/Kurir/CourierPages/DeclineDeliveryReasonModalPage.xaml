<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kurir.CourierPages.DeclineDeliveryReasonModalPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Razlog odbijanja dostave?" 
                HorizontalOptions="CenterAndExpand" />
            <Editor x:Name="DeclineReason" Text="{Binding Description}">
                
            </Editor>
            <Button Text="Odbi dostavu" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>